<h3><%= @post.title %></h3>
<%= link_to"← 一覧に戻る",:posts %>
<table>
  <tr>
    <th>開始日</th>
    <td><%= @post.start_day %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @post.end_day %></td>
  </tr>
  <tr>
    <th>終日</th>
    <% if @post.all_day %>
      <td>○</td>
    <% else %>
      <td></td>
    <% end %>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @post.memo %></td>
  </tr>
</table>

