<h3>予定一覧</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><%= post.title %></td>
    <td><%= post.start_day.strftime("%Y/%m/%d") %></td>
    <td><%= post.end_day.strftime("%Y/%m/%d")%></td>
    <% if(post.all_day)%>
      <td>○</td>
    <% else %>
      <td></td>
    <% end %>
    <td><%= post.created_at.strftime("%Y/%m/%d %H:%M")  %></td>
    <td><%= link_to "参照",post %></td>
    <td><%= link_to "編集",[:edit,post]%></td>
    <td></td>
    </tr>
  </tr>
  <% end %>
</tbody>
</table>

<p><%= link_to "新規追加", :new_post %></p>
<% if flash[:notice] %>
<div class = "flash">
  <p class = "notice"><%= flash[:notice] %></p>
</div>
<% end %>