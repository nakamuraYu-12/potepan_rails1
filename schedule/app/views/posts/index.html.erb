<h3>予定一覧</h3>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><%= post.title %></td>
    <td><%= post.start_day %></td>
    <td><%= post.end_day %></td>
    <td><%= post.all_day %></td>
    <td><%= post.created_at %></td>
  </tr>
  <% end %>
</tbody>
</table>

<p><%= link_to "新規追加", :new_post %></p>

