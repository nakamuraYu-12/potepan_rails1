<div class = "form-container">
  <h4>予定の新規追加</h4>

  <%= render "shared/error", obj: @post %>
  <%= form_with model:@post, class: "row g-3" do |f|%>
    <div class = "col-12">
      <%= f.label :title,"タイトル" ,class: "form-label"%>
      <%= f.text_field :title, class:"form-control"%>
    </div>
    <div class = "col-md-6">
      <%= f.label :start_day,"開始日",class: "form-label"%>
      <%= f.date_field :start_day , class:"form-control"%>
    </div>
    <div class = "col-md-6">
      <%= f.label :end_day,"終了日",class: "form-label"%>
      <%= f.date_field :end_day, class:"form-control"%>
    </div>
    <div class = "col-12 pl-5 form-check ">
      <%= f.check_box :all_day,checked:false,checked: false%>
      <%= f.label :all_day,"終日の場合はチェックを入れます"%>
    </div>
    <div class = "col-12">
      <%= f.label :memo,"スケジュールメモ",class: "form-label"%>
      <%= f.text_area :memo , class:"form-control"%>
    </div>
    <div class = "buttons">
    <a href = "/posts"><button type = "button" class="btn btn-secondary">キャンセル</button></a>
    <%= f.submit "保存", class:"btn btn-primary"%>
  </form>

</div>
<% end %>
